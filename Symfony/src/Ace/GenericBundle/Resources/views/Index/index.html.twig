{% extends '::container.html.twig' %}

{% block javascripts %}
	<!-- jQuery library (served from Google) -->
	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
	<!-- bxSlider Javascript file -->
	<script src="{{ asset("jquery.bxslider/jquery.bxslider.min.js") }}"></script>

	<script type="text/javascript">
		$(document).ready(function ()
		{
			$('.bxslider').bxSlider({
				auto: true,
				autoControls: true,
				speed: 1000,
				pause:15000,
				controls: false
			});
		});
	</script>
{% endblock %}

{% block stylesheets %}
	<!-- bxSlider CSS file -->
	<link href=" {{ asset("jquery.bxslider/jquery.bxslider.css") }}" rel="stylesheet" />

	<style>
		body
		{
			padding-top:40px;
		}

		@media (max-width: 979px)
		{
			body
			{
				padding-top: 0px;
			}
		}

		.hero-title, .hero-subtitle, .hero-paragraph-title, .hero-paragraph
		{
			text-align: center;
		}

		.hero-subtitle
		{
			color: #555555;
		}

		.hero-image
		{
			display: block;
			margin-left: auto;
			margin-right: auto;
			width: 50%;
		}
	</style>
{% endblock %}

{% block precontainer_content %}
	<div class="row-fluid" style="background-image: url('{{ asset("textured_paper.png") }}');
			padding-bottom: 20px; padding-top: 20px;">
		<div class="span12 {#well#}">
			<h1 class="hero-title">Wiselib-Online : Code anywhere, anytime!</h1>

			<h3 class="hero-subtitle">
				<span style="display:inline-block">online development & collaboration platform for</span>
				<span style="display:inline-block">Wiselib users and developers</span>
			</h3>

			<div class="row-fluid">
				<div class="span4">
                    {#Change icon#}
					<p style="text-align: center; font-size: 150px"><i class="icon-edit"></i></p>

					<h3 class="hero-paragraph-title">Fork</h3>

					<p class="hero-paragraph">Fork the Wiselib Github repository </p>
				</div>
				<div class="span4">
                    {#Change icon#}
					<p style="text-align: center; font-size: 150px"><i class="icon-signin"></i></p>

					<h3 class="hero-paragraph-title">Code collaboratively</h3>

					<p class="hero-paragraph">Code in an awesome editor and work on the same files with other developers. </p>
				</div>
				<div class="span4">
                    {#Change icon#}
					<p style="text-align: center; font-size: 150px"><i class="icon-group"></i></p>

					<h3 class="hero-paragraph-title">Deploy</h3>

					<p class="hero-paragraph">Use our cloud compilation services to compile and debug your code and
						run tests on the Wisebed facilities.</p>
				</div>
			</div>
			<div class="row-fluid">
				<div class="span2 offset5">
					<a href="{{ path("AceStaticBundle_about") }}" class="btn btn-success btn-block">
						Learn More
					</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block fluidcontainer %}
	{% render 'ace_user.usercontroller:inlineRegisterAction' %}

	<hr style="margin-top: 10px;" class="soften">
	<div class="row-fluid">
		<div class="span12" style="padding-top: 0px;">
			<div class="row-fluid">
				<div class="span12">
					<h3 style="text-align: center">Partners</h3>
				</div>
			</div>
			<div class="row-fluid">
				<div class="span6">
					<a href="{{ path("AceStaticBundle_partner", {"name" : "digispark"}) }}">
						<img src="{{ asset("images/digistump_logo.png") }}" style="display: block; margin: auto; height: 100px">
					</a>
				</div>
				<div class="span6">
					<a href="{{ path("AceStaticBundle_partner", {"name" : "arno"}) }}">
						<img src="{{ asset("images/olympiacircuits_logo.png") }}" style="display: block; margin: auto; height: 100px">
					</a>
				</div>
			</div>
		</div>
	</div>

	{% include 'AceGenericBundle:Index:supporters.html.twig' %}
{% endblock %}
